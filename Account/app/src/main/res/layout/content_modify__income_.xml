<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/income_money"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:hint="0.00"
        android:textColor="#003300"
        android:textSize="18pt"
        android:paddingLeft="15dp"
        android:digits="0123456789."
        android:lines="1"/>
    <LinearLayout
        android:id="@+id/income_linearlayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="8pt"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="#ff6600"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/income_kind"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="10pt"
            android:paddingLeft="15dp"
            android:text="职业收入>工资收入"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:focusable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/income_linearlayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账户"
            android:textSize="8pt"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="#ff6600"
            />
        <TextView
            android:id="@+id/income_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="现金(CNY)"
            android:textSize="10pt"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/income_linearlayout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:textSize="8pt"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="#ff6600"
            android:text="备注"
            android:gravity="center"/>
        <EditText
            android:id="@+id/income_remarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/income_linearlayout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="#ff6600"
            android:text="时间"
            android:gravity="center"/>
        <TextView
            android:id="@+id/income_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

    </LinearLayout>
    <Button
    android:id="@+id/income_btn"
    android:layout_width="260dp"
    android:layout_height="48dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="保 存"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:textSize="20sp"
    android:background="@drawable/button_style"/>
    <Button
        android:id="@+id/delete_btn"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="删 除"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/button_style"/>


</LinearLayout>